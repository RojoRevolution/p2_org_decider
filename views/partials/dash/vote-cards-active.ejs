<!-- Partial contains all active vote cards that you can actually vote on -->
<!-- Used EJS to run a for loop and render all needed cards to the page -->
<div id="activeCardsDiv">
    <% for(let i=0; i < ideaNameTrue.length; i++) { %>
        <div class="card m-2 card-adjust">
            <div class="card-body">
                <div class="row">
                    <div class="col-2">
                        <!-- Vote Up Button -->
                        <button class="voteUp">
                            <img src="/images/dashboard/voteup.png" style="width:24px;"
                                data-attribute="<%= ideaIdsTrue[i]%>">
                        </button>
                        <!-- Vote Count Display - Did not have time to render to the page properly-->
                        <p id="voteCountDisplay" class="voteCount">0</p>
                    </div>
                    <div class="col-10">
                        <h5 class="card-title">
                            <!-- Card Title -->
                            <%= ideaNameTrue[i]%>
                        </h5>
                        <p class="card-text">
                            <!-- Card Description -->
                            <%= ideaTextTrue[i]%>
                        </p>
                    </div>
                </div>
            </div>
        </div>
        <!-- For Loop Closing Tag -->
        <% } %>
</div>