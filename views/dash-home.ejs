    <body>
        <div class="container-fluid height-auto">
            <div class="row">
                <!-- Sidebar -->
                <div class="col-2 py sidebar">
                    <div class="my-3 text-center">
                        <a href="/dashboard"><img src="/images/dashboard/yaynay_logo.png" alt="yay or nay logo"></a>
                    </div>
                    <!-- Add new Category Partial -->
                    <%- include('partials/dash/addNewCategory'); %>
